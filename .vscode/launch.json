    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Scraper Testing",
            "type": "python",
            "request": "launch",
            "cwd": "${workspaceFolder}/tools/",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Run API",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "tools/api/__init__.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--host=0.0.0.0",
                "--port=5001"
            ],
            "jinja": true
        },
